<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matches.AddMatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout_main"
        android:gravity="center">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/matches_add_match"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/matches_player_one"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/player_one_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/matches_player_two"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/player_two_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/matches_result"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/result_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </EditText>

        <Button
            android:id="@+id/save_match_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_corner"
            android:text="Ajouter"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:layout_margin="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>